{
  "openapi": "3.0.0",
  "info": {
    "title": "REST Countries API",
    "description": "Provides information about countries including name, region, population, flags, and more.",
    "version": "v3.1"
  },
  "paths": {
    "/v3.1/all": {
      "get": {
        "summary": "Get all countries",
        "description": "Returns a list of all countries with detailed information.",
        "responses": {
          "200": {
            "description": "A list of countries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "object",
                        "properties": {
                          "common": {
                            "type": "string"
                          },
                          "official": {
                            "type": "string"
                          }
                        }
                      },
                      "region": {
                        "type": "string"
                      },
                      "subregion": {
                        "type": "string"
                      },
                      "population": {
                        "type": "integer"
                      },
                      "flags": {
                        "type": "object",
                        "properties": {
                          "png": {
                            "type": "string",
                            "format": "uri"
                          },
                          "svg": {
                            "type": "string",
                            "format": "uri"
                          }
                        }
                      },
                      "capital": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "languages": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      },
                      "currencies": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            },
                            "symbol": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}